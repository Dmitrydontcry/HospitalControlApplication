<p style="color: green"><%= notice %></p>

<h1>Пациенты</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Имя</th>
      <th scope="col">Фамилия</th>
      <th scope="col">Врач</th>
      <th scope="col">Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <th scope="row"><%= patient.id %></th>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.user.email %></td>

        <td>
          <div class="d-flex flex-row mb-3">
            <%= link_to "Показать", patient_path(patient), class: "btn btn-light" %>
            <%= link_to "Редактировать", edit_patient_path(patient), class: "btn btn-light" %>
            <%= button_to "Удалить", patient, method: :delete, class: "btn btn-danger" %>
          <div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "Новый пациент", new_patient_path, class: "btn btn-primary" %>
